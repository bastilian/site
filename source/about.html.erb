<% group_events_by(data.user.events, :year).reverse.each do |year, events| %>
  <h3 id="<%= year %>"><%= year %></h3>
  <ul class="about-event">
    <% events.sort_by { |e| e.type }.reverse.each do |event| %>
      <li>
        <strong<%= ' class="big"' if event.url %><%= event.color ? " style='color:##{event.color}'" : '' %>><%= event.title %></strong>

        <% if event.url %>
          <% article = find_article(event.url) %>

          <% if article && article.data.metatitle %>
            <span class="metatitle"><%= article.data.metatitle %></span>
          <% elsif !article %>
            <span class="metatitle">
              <a href="<%= event.url %>"><%= event.url %></a>
            </span>
          <% end %>

          <% if article %>
            <%= article.body %>
          <% end %>

        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
