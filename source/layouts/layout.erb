<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <title><%= current_page.data.title + ' | ' if current_page.data.title %>Sebastian Gräßl</title>

    <%= stylesheet_link_tag "all" %>
    <%= stylesheet_link_tag 'print', media: :print %>

    <script type="text/javascript">
        window.cookieconsent_options = {
          "message": "This website uses cookies for analytics and tracking your every move.",
          "dismiss": "OK.",
          "learnMore": "Interesting. Tell me more.",
          "link": "/privacy",
          "theme": false,
          "expiryDays": 30
        };
    </script>

    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/1.0.9/cookieconsent.min.js"></script>
    <link type="text/plain" rel="author" href="http://bastilian.me/humans.txt" />
  </head>

  <body>
    <div id="site" class="<%= current_page.path == 'index.html' ? 'index' : '' %>">
      <%= partial 'header' %>

      <div id="map"></div>
      <div id='timeline'></div>
        <div id="content">
          <div>
            <header>
              <h2><%= current_page.data.title || "Sebastian Gräßl" %></h2>
            </header>

            <section>
              <%= yield %>
            </section>

            <aside>
              <div>
                <% if current_page.data.image %>
                  <div class="image">
                    <img class="featured-image" src="<%= current_page.data.image %>" alt="" />
                  </div>
                <% end %>

                <% if current_page.data.metatitle %>
                  <p>
                    <%= current_page.data.metatitle %>
                  </p>
                <% end %>
                <% if current_page.data.worked_with %>
                  <strong>Worked with:</strong>
                  <ul>
                    <% current_page.data.worked_with.each do | item | %>
                      <li><%= item %></li>
                    <% end %>
                  </ul>
                <% end %>
              </div>
            </aside>
          </div>
        </div>
      <footer>
        © 2016 by Sebastian Gräßl | <a href="/privacy">Privacy Policy</a>
      </footer>
    </div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyADczaSQDsbY4uh5VzD-xUxWTpDIeshWe0"></script>
    <%= javascript_include_tag  "all" %>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-75253038-1', 'auto');
      ga('send', 'pageview');
    </script>
  </body>
</html>
